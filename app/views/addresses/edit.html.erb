<%# ====================================== %>
<%#    form to edit address information    %>
<%# ====================================== %>

<%=form_with(model: @address, local: true) do |form|%>

 <div class="field">
    <%= form.label :street_no, class:"label"%>
    <%= form.text_field :street_no %>
  </div>
  <div class="field">
    <%= form.label :street, class:"label"%>
    <%= form.text_field :street %>
  </div>
  <div class="field">
    <%= form.label :suburb, class:"label"%>
    <%= form.text_field :suburb %>
  </div>
  <div class="field">
    <%= form.label :postcode, class:"label"%>
    <%= form.text_field :postcode %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-lg btn-primary"%>
  </div>
<% end%>