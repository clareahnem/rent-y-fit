<h1 class="bookings-title">My Fits Rent Cart Summary</h1>
<div class="bookings-section grey round-top">
<h2>Items pending rent approval (<%=@pendingitems.count%>)</h1>
<% if @pendingitems.count > 0%>
    <%= render "shared/bookingcard", bookings:@pendingitems%>
<% end%>
</div>

<div class="bookings-section white">
<% if @approveditems.count > 0%>
<h2>Items approved by owner for rent(<%=@approveditems.count%>)</h2>
<%= render "shared/bookingcard", bookings:@approveditems%>
<% end %>
</div>

<div class="bookings-section grey">
<h2>Declined rent requests(<%=@approveditems.count%>)</h2>
<% if @declineditems.count > 0 %>
<%= render "shared/bookingcard", bookings:@declineditems %>
<% end %> 
</div>

<div class="bookings-section white">
<h2>Rent-y-FiT on your way(<%=@upcoming.count%>)</h2>
<%= render "shared/bookingcard", bookings:@upcoming %>
</div>

<div class="bookings-section grey">
<h2>FiTs you are Currently Renting(<%=active_orders(@paiditems).count%>)</h2>
<%= render "shared/bookingcard", bookings:active_orders(@paiditems) %>
</div>

<div class="bookings-section white round-bottom">
<h2>Past Orders(<%=completed_orders(@paiditems).count%>)</h2>
<%= render "shared/bookingcard", bookings:completed_orders(@paiditems) %>
</div>


