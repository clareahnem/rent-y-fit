<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group mb-3 ml-2">
    <%= form.label :category_id %>
    <%= form.select :category_id, @categories.map {|c| [c.name, c.id]} %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <p>Condition:</p>
  <div class="field">
    <% @conditions.each do |c|%>
    <%= form.radio_button :condition, c %>
    <%= form.label :condition, c.capitalize%>
    <% end %>
  </div>

  <h5>Price Setups</h5>
  <p>It's always a good idea to take deposits from customers in case they lose or damage your items. You will pay this back to the customer once the item is returned to you.</p>
  <div class="field">
    <%= form.label :deposit, "Deposit($dd.cc)"%>
    <%= form.number_field :deposit %>
  </div>

  <div class="field">
    <%= form.label :price_per_day, "Price rate per day ($dd.cc)"%>
    <%= form.number_field :price_per_day %>
  </div>

  <h5> Upload an image</h5>
  <div class='field'>
  <%=form.label :picture%>
  <%= form.file_field :picture, accept: 'image/png, image/jpg, image/jpeg'%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
